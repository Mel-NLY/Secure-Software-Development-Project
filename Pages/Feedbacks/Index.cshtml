@page
@model SSDAssignmentBOX.Pages.Feedbacks.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Feedback</h2>

<p>
    <a asp-page="./CreateFeedback">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Feedback[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Feedback[0].Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Feedback[0].Subject)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Feedback[0].Message)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Feedback) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.feedbackId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.feedbackId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
