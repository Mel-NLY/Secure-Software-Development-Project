@page
@model SSDAssignmentBOX.Pages.Feedbacks.CreateFeedbackModel

@{
    ViewData["Title"] = "CreateFeedback";
}

<h2>Give Feedback</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Feedback.Name" class="control-label"></label>
                <input asp-for="Feedback.Name" class="form-control" />
                <span asp-validation-for="Feedback.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Feedback.Email" class="control-label"></label>
                <input asp-for="Feedback.Email" class="form-control" />
                <span asp-validation-for="Feedback.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Feedback.Subject" class="control-label"></label>
                <input asp-for="Feedback.Subject" class="form-control" />
                <span asp-validation-for="Feedback.Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Feedback.Message" class="control-label"></label>
                <input asp-for="Feedback.Message" class="form-control" />
                <span asp-validation-for="Feedback.Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-default"/>
            </div>
        </form>
    </div>
</div>

<div>
