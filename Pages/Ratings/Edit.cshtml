@page
@model SSDAssignmentBOX.Pages.Ratings.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Rating</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Rating.RatingId" />
            <div class="form-group">
                <label asp-for="Rating.BookTitle" class="control-label"></label>
                <input asp-for="Rating.BookTitle" class="form-control" />
                <span asp-validation-for="Rating.BookTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating.User" class="control-label"></label>
                <input asp-for="Rating.User" class="form-control" />
                <span asp-validation-for="Rating.User" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating.BookRating" class="control-label"></label>
                <input asp-for="Rating.BookRating" class="form-control" />
                <span asp-validation-for="Rating.BookRating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating.BookComments" class="control-label"></label>
                <input asp-for="Rating.BookComments" class="form-control" />
                <span asp-validation-for="Rating.BookComments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating.RatingTime" class="control-label"></label>
                <input asp-for="Rating.RatingTime" class="form-control" />
                <span asp-validation-for="Rating.RatingTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

