@page
@model SSDAssignmentBOX.Pages.Ratings.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Rating</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Rating.BookTitle)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Rating.BookTitle)
        </dd>
        @if (User.Identity.IsAuthenticated)
        {
                    @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
                    {
                        <dt>
                            @Html.DisplayNameFor(model => model.Rating.User)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Rating.User)
                        </dd>
                    }
        }
        <dt>
            @Html.DisplayNameFor(model => model.Rating.BookRating)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Rating.BookRating)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Rating.BookComments)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Rating.BookComments)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Rating.RatingTime)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Rating.RatingTime)
        </dd>
    </dl>
</div>
<div>
    @if (User.Identity.IsAuthenticated)
    {
                    @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
                    {
    <a asp-page="./Edit" asp-route-id="@Model.Rating.RatingId">Edit</a>
                    } 
    }|
    <a asp-page="./Index">Back to List</a>
</div>
