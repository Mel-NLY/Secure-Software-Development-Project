@page
@using Microsoft.AspNetCore.Identity
@using SSDAssignmentBOX.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@model SSDAssignmentBOX.Pages.Ratings.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Rating</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Rating.BookTitle" class="control-label"></label>
                <input asp-for="Rating.BookTitle" class="form-control" />
                <span asp-validation-for="Rating.BookTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating.User" class="control-label"></label>
                <input asp-for="Rating.User" class="form-control" value="@UserManager.GetUserName(User)" readonly="readonly" />
                <span asp-validation-for="Rating.User" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating.BookRating" class="control-label"></label>
                <input asp-for="Rating.BookRating" class="form-control" min="1" max="5" />
                <span asp-validation-for="Rating.BookRating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating.BookComments" class="control-label"></label>
                <input asp-for="Rating.BookComments" class="form-control" />
                <span asp-validation-for="Rating.BookComments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Index">Back to List</a>
</div>

